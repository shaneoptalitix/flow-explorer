name: Build and Deploy API and Web App

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  workflow_dispatch:

env:
  DOTNET_VERSION: '8.0.0'
  API_PATH: './AzureDevOpsBuildsApi'
  WEBAPP_PATH: './AzureDevOpsBuildsApi/webapp'

jobs:
  build-and-deploy-api:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Setup .NET
      uses: actions/setup-dotnet@v4
      with:
        dotnet-version: ${{ env.DOTNET_VERSION }}

    - name: Restore dependencies
      working-directory: ${{ env.API_PATH }}
      run: dotnet restore

    - name: Build API
      working-directory: ${{ env.API_PATH }}
      run: dotnet build --configuration Release --no-restore

    - name: Run tests
      working-directory: ${{ env.API_PATH }}
      run: dotnet test --configuration Release --no-build --verbosity normal
      continue-on-error: true

    - name: Publish API
      working-directory: ${{ env.API_PATH }}
      run: dotnet publish --configuration Release --no-build --output ./publish

    - name: Upload API artifact
      uses: actions/upload-artifact@v4
      with:
        name: api-artifact
        path: ${{ env.API_PATH }}/publish

    # Deploy to Azure App Service (uncomment and configure)
    # - name: Deploy to Azure Web App
    #   uses: azure/webapps-deploy@v2
    #   with:
    #     app-name: ${{ secrets.AZURE_API_APP_NAME }}
    #     publish-profile: ${{ secrets.AZURE_API_PUBLISH_PROFILE }}
    #     package: ${{ env.API_PATH }}/publish

  build-and-deploy-webapp:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '20'

    # If you have a package.json with build steps, uncomment:
    # - name: Install dependencies
    #   working-directory: ${{ env.WEBAPP_PATH }}
    #   run: npm ci
    
    # - name: Build web app
    #   working-directory: ${{ env.WEBAPP_PATH }}
    #   run: npm run build

    - name: Upload webapp artifact
      uses: actions/upload-artifact@v4
      with:
        name: webapp-artifact
        path: ${{ env.WEBAPP_PATH }}

    # Deploy to Azure Static Web App (uncomment and configure)
    # - name: Deploy to Azure Static Web Apps
    #   uses: Azure/static-web-apps-deploy@v1
    #   with:
    #     azure_static_web_apps_api_token: ${{ secrets.AZURE_STATIC_WEB_APPS_API_TOKEN }}
    #     repo_token: ${{ secrets.GITHUB_TOKEN }}
    #     action: "upload"
    #     app_location: ${{ env.WEBAPP_PATH }}
    #     output_location: "" # Leave empty if no build output folder

    # Alternative: Deploy to Azure Blob Storage for static hosting
    # - name: Deploy to Azure Blob Storage
    #   uses: azure/CLI@v1
    #   with:
    #     inlineScript: |
    #       az storage blob upload-batch \
    #         --account-name ${{ secrets.AZURE_STORAGE_ACCOUNT }} \
    #         --auth-mode key \
    #         --destination '$web' \
    #         --source ${{ env.WEBAPP_PATH }} \
    #         --overwrite
